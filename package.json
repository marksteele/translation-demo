{
  "name": "translation-demo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@mojang/t-component": "^4.0.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "trans:extract": "react-gettext-parser --config ./react-gettext-parser.config.js --output messages.pot 'src/**/{*.js,*.jsx,*.ts,*.tsx}'; mkdir -p locale/en_US; bin/add-english-translations",
    "trans:push": "export JAVA_HOME=$(/usr/libexec/java_home -v 1.8); mojito push -r translation-demo -sl en-US -ft PO -sr '^messages\\.pot$'",
    "trans:pull": "export JAVA_HOME=$(/usr/libexec/java_home -v 1.8); mojito pull -r translation-demo -sl en-US -ft PO  -sr '^messages\\.pot$' -t locale/",
    "trans:update": "bin/generate-json --o /public/translations/ --escape-percentage"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "gettext-parser": "^4.0.4",
    "po2json": "1.0.0-alpha",
    "react-intl-po": "^2.2.2"
  }
}
